<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/groundup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/groundup1" />
     
    <ImageView
        android:id="@+id/grounddown3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/groundup3"
        android:layout_alignTop="@+id/groundup3"
        android:layout_marginTop="58dp"
        android:src="@drawable/grounddown1" />

    <ImageView
        android:id="@+id/groundup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/grounddown3"
        android:layout_below="@+id/groundup3"
        android:src="@drawable/groundup1" />
    
     <ImageView
        android:id="@+id/grounddown2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/groundup2"
        android:layout_alignTop="@+id/groundup2"
        android:layout_marginTop="58dp"
        android:src="@drawable/grounddown1" />

    <ImageView
        android:id="@+id/groundup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/grounddown2"
        android:layout_below="@+id/groundup2"
        android:src="@drawable/groundup1" />

    <ImageView
        android:id="@+id/grounddown1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/groundup1"
        android:layout_below="@+id/grounddown2"
        android:layout_marginTop="27dp"
        android:src="@drawable/grounddown1" />

   

</RelativeLayout>



