<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/resume"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newGame"
        android:layout_below="@+id/newGame"
        android:layout_marginTop="18dp"
        android:onClick="onClick"
        android:text="Resume" />

    <Button
        android:id="@+id/setting"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/resume"
        android:layout_below="@+id/resume"
        android:layout_marginTop="18dp"
        android:onClick="onClick"
        android:text="Level selector" />

    <Button
        android:id="@+id/score"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/setting"
        android:layout_below="@+id/setting"
        android:layout_marginTop="18dp"
        android:onClick="onClick"
        android:text="Score" />

    <Button
        android:id="@+id/manual"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/score"
        android:layout_below="@+id/score"
        android:layout_marginTop="18dp"
        android:onClick="onClick"
        android:text="Manual" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:onClick="onClick"
        android:text="New Game" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/newGame"
        android:layout_marginRight="14dp"
        android:layout_marginTop="58dp"
        android:onClick="onClick"
        android:text="Log out" />

    <TextView
        android:id="@+id/loginName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logOut"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Logged in as:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>