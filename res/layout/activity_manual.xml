<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ManualActivity" >


    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/normy" />
    
    <TextView
        android:id="@+id/nameManual"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_above="@+id/picture"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:text="Normy"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/description"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/nameManual"
        android:layout_alignTop="@+id/nameManual"
        android:layout_marginTop="24dp"
        android:text="description"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/nameManual"
        android:layout_below="@+id/description"
        android:text="Touched in time:"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     <TextView
        android:id="@+id/touched"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/nameManual"
        android:layout_below="@+id/textView2"
        android:text="touched"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/nameManual"
        android:layout_below="@+id/touched"
        android:text="Not in time:"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
    <TextView
        android:id="@+id/notTouched"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/seekBar"
        android:layout_alignLeft="@+id/nameManual"
        android:layout_below="@+id/textView3"
        android:text="not touched"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/picture"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:max="8" />

    

</RelativeLayout>
